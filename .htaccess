<IfModule mod_rewrite.c>
    RewriteEngine On

    # Allow direct access to existing files and directories
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # Friendly routes for top-level pages
    RewriteRule ^$ index.php [L,QSA]
    RewriteRule ^login/?$ index.php [L,QSA]
    RewriteRule ^dashboard/?$ dashboard.php [L,QSA]
    RewriteRule ^admin/?$ admin.php [L,QSA]
    RewriteRule ^install/?$ install.php [L,QSA]
    RewriteRule ^cloud/?$ cloud.php [L,QSA]
    RewriteRule ^blog/?$ blog.php [L,QSA]

    # Pseudo-static API endpoints (e.g. /api/session -> /api/session.php)
    RewriteRule ^api/([a-z0-9_]+)/?$ api/$1.php [L,QSA,NC]
</IfModule>

# Increase upload limits for cloud drive uploads (mod_php environments)
<IfModule mod_php.c>
    php_value upload_max_filesize 2048M
    php_value post_max_size 2050M
</IfModule>
# Allow larger request bodies at the web server level
LimitRequestBody 0
